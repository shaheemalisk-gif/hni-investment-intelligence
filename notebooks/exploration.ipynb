# Cell 1: Imports
import sys
sys.path.append('..')

from src.data.collectors import StockDataCollector
from src.utils.config import config
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Set display options
pd.set_option('display.max_columns', None)
pd.set_option('display.width', None)
sns.set_style('whitegrid')

# Cell 2: Test single ticker
collector = StockDataCollector()

# Test with NVIDIA
nvda_data = collector.fetch_ticker_info('NVDA')
print("âœ… NVDA data fetched successfully!")
print("\nAvailable keys:", nvda_data.keys())

# Cell 3: Extract metrics
nvda_metrics = collector.extract_key_metrics(nvda_data)
print("\nðŸ“Š NVDA Key Metrics:")
for key, value in nvda_metrics.items():
    if isinstance(value, float):
        print(f"{key}: {value:.2f}")
    else:
        print(f"{key}: {value}")

# Cell 4: Test batch fetching (Magnificent 7)
mag7 = config.get('config/symbols.yaml')  # Load from YAML
mag7_symbols = ['AAPL', 'MSFT', 'GOOGL', 'AMZN', 'NVDA', 'TSLA', 'META']

print("ðŸš€ Fetching Magnificent 7...")
mag7_df = collector.batch_fetch(mag7_symbols)

# Cell 5: Display results
print(f"\nðŸ“ˆ Magnificent 7 Overview:")
print(mag7_df[['symbol', 'company_name', 'market_cap', 'pe_ratio', 
               'revenue_growth', 'profit_margin', 'beta']].to_string())

# Cell 6: Quick visualization
fig, axes = plt.subplots(2, 2, figsize=(15, 10))

# Market Cap comparison
mag7_df.plot(x='symbol', y='market_cap', kind='bar', ax=axes[0,0], legend=False)
axes[0,0].set_title('Market Capitalization')
axes[0,0].set_ylabel('Market Cap ($)')

# P/E Ratios
mag7_df.plot(x='symbol', y='pe_ratio', kind='bar', ax=axes[0,1], legend=False, color='orange')
axes[0,1].set_title('P/E Ratios')
axes[0,1].set_ylabel('P/E Ratio')

# Profit Margins
mag7_df.plot(x='symbol', y='profit_margin', kind='bar', ax=axes[1,0], legend=False, color='green')
axes[1,0].set_title('Profit Margins')
axes[1,0].set_ylabel('Profit Margin (%)')

# Beta (Risk)
mag7_df.plot(x='symbol', y='beta', kind='bar', ax=axes[1,1], legend=False, color='red')
axes[1,1].set_title('Beta (Volatility)')
axes[1,1].set_ylabel('Beta')

plt.tight_layout()
plt.savefig('../data/mag7_overview.png', dpi=300, bbox_inches='tight')
plt.show()

print("âœ… Visualization saved to data/mag7_overview.png")

# Cell 7: Save to CSV
mag7_df.to_csv('../data/processed/mag7_metrics.csv', index=False)
print("âœ… Data saved to data/processed/mag7_metrics.csv")